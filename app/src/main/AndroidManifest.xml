<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.netguru.android.inbbbox">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".feature.login.LoginActivity"
            android:autoRemoveFromRecents="true"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:stateNotNeeded="true"
            tools:ignore="UnusedAttribute" />

        <activity
            android:name=".feature.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.main.MainActivity"
            android:launchMode="singleTop"/>

        <activity android:name=".feature.followers.details.FollowerDetailsActivity" />

        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}"/>

        <receiver android:name="co.netguru.android.inbbbox.controler.notification.NotificationAlarmReceiver" />
    </application>

</manifest>