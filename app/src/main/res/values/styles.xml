<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Font14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font14.Pink" parent="Font14">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Font14.White" parent="Font14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font14.Black" parent="Font14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Font25.PalePink" parent="Font25">
        <item name="android:textColor">@color/palePink</item>
    </style>

    <style name="Font25.PalePink.RobotoLight" parent="Font25.PalePink">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SwipeActionIcons">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
