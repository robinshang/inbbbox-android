<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="AppThemeGallery" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TimePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Font12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Font12.Gray" parent="Font12">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Font12.DarkGray" parent="Font12">
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="Font12.Primary" parent="Font12">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Font14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font14.Gray" parent="Font14">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Font14.DarkGray" parent="Font14">
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="Font14.RobotoSmallCaps" parent="Font14">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="Font14.RobotoSmallCaps.Pink" parent="Font14.RobotoSmallCaps">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Font14.Pink" parent="Font14">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Font14.White" parent="Font14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font14.Black" parent="Font14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Font16.SemiBlack" parent="Font16">
        <item name="android:textColor">@color/semiBlack</item>
    </style>

    <style name="Font25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Font25.PalePink" parent="Font25">
        <item name="android:textColor">@color/palePink</item>
    </style>

    <style name="Font25.RobotoLight" parent="Font25">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Font25.RobotoLight.PalePink" parent="Font25.RobotoLight">
        <item name="android:textColor">@color/palePink</item>
    </style>

    <style name="Font25.RobotoLight.Gray" parent="Font25.RobotoLight">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SwipeActionIcons">
        <item name="android:layout_width">@dimen/shot_swipe_action_icon_width</item>
        <item name="android:layout_height">@dimen/shot_swipe_action_icon_width</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LongSwipeActionIcons" parent="SwipeActionIcons">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/shot_long_swipe_action_side_margin</item>
        <item name="android:layout_marginRight">@dimen/shot_long_swipe_action_side_margin</item>
    </style>

    <style name="FabMenuLabel">
        <item name="android:background">@drawable/fab_menu_label_background</item>
        <item name="android:paddingLeft">@dimen/fab_menu_label_side_padding</item>
        <item name="android:paddingRight">@dimen/fab_menu_label_side_padding</item>
        <item name="android:paddingTop">@dimen/fab_menu_label_bottom_top_padding</item>
        <item name="android:paddingBottom">@dimen/fab_menu_label_bottom_top_padding</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">@dimen/fab_label_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

    <style name="GifLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/gif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_gif_label_background</item>
        <item name="android:paddingLeft">@dimen/gif_label_side_padding</item>
        <item name="android:paddingRight">@dimen/gif_label_side_padding</item>
        <item name="android:top">@dimen/gif_label_top_bottom_padding</item>
        <item name="android:bottom">@dimen/gif_label_top_bottom_padding</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DetailsActionButtonLabels" parent="Font12">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/actionButtonLabelColor</item>
        <item name="android:layout_marginRight">@dimen/details_action_label_right_margin</item>
        <item name="android:layout_marginLeft">@dimen/details_action_label_left_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="ShotDetailsSectionContainer">
        <item name="android:paddingLeft">@dimen/margin_default</item>
        <item name="android:paddingRight">@dimen/margin_default</item>
        <item name="android:paddingTop">@dimen/shot_details_top_padding</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
    </style>

    <style name="ShotCommentSectionContainer" parent="ShotDetailsSectionContainer">
        <item name="android:paddingTop">@dimen/details_comment_top_padding</item>
        <item name="android:paddingBottom">@dimen/details_comment_top_padding</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="colorAccent">@color/lightGray</item>
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/lightGray</item>
    </style>

    <style name="CreateBucketTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="colorControlNormal">@color/lightGray</item>
    </style>

    <style name="LoadMoreText" parent="Font16">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
