<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="TimePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">10dp</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Font12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Font12.Gray" parent="Font12">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Font12.DarkGray" parent="Font12">
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="Font12.Primary" parent="Font12">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Font14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font14.Gray" parent="Font14">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Font14.DarkGray" parent="Font14">
        <item name="android:textColor">@color/textGrey</item>
    </style>

    <style name="Font16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Font14.RobotoSmallCaps" parent="Font14">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="Font14.RobotoSmallCaps.Pink" parent="Font14.RobotoSmallCaps">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Font14.Pink" parent="Font14">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Font14.White" parent="Font14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font14.Black" parent="Font14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font25">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Font25.PalePink" parent="Font25">
        <item name="android:textColor">@color/palePink</item>
    </style>

    <style name="Font25.RobotoLight" parent="Font25">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Font25.RobotoLight.PalePink" parent="Font25.RobotoLight">
        <item name="android:textColor">@color/palePink</item>
    </style>

    <style name="Font25.RobotoLight.Gray" parent="Font25.RobotoLight">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SwipeActionIcons">
        <item name="android:layout_width">@dimen/swipe_action_icon_width</item>
        <item name="android:layout_height">@dimen/swipe_action_icon_width</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LongSwipeActionIcons" parent="SwipeActionIcons">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="FabMenuLabel">
        <item name="android:background">@drawable/fab_menu_label_background</item>
        <item name="android:paddingLeft">@dimen/fab_menu_label_side_padding</item>
        <item name="android:paddingRight">@dimen/fab_menu_label_side_padding</item>
        <item name="android:paddingTop">@dimen/fab_menu_label_bottom_top_padding</item>
        <item name="android:paddingBottom">@dimen/fab_menu_label_bottom_top_padding</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">@dimen/fab_label_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsActionButtonLabels" parent="Font12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/actionButtonLabelColor</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="ShotDetailsSectionContainer">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/shot_details_top_padding</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
