<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/comment_edit_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/details_comment_input_right_margin"
        android:layout_toLeftOf="@+id/comment_send_ImageView"
        android:paddingTop="@dimen/details_comment_input_margin"
        android:theme="@style/TextInputStyle">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/comment_edit_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/details_comment_input_margin"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/comment_edit_hint"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>