<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_user_shot_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bucket_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_info_shot_card_margin_top"
        android:layout_marginStart="@dimen/user_info_shot_vertical_margin"
        android:layout_marginEnd="@dimen/user_info_shot_vertical_margin"
        android:layout_marginBottom="@dimen/user_info_shot_bottom_margin"
        app:cardCornerRadius="@dimen/shot_cardview_corner_radius"
        app:cardElevation="@dimen/shot_cardview_elevation">

        <co.netguru.android.inbbbox.feature.shared.view.RoundedCornersShotImageView
            android:id="@+id/shot_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>
</FrameLayout>