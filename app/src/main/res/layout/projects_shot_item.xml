<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/projects_shot_item_shot_width"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/bucket_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/projects_shot_item_margin_bottom"
        android:layout_marginTop="@dimen/projects_shot_item_margin_top"
        android:layout_marginStart="@dimen/shared_shot_item_card_margin"
        android:layout_marginEnd="@dimen/shared_shot_item_card_margin"
        app:cardCornerRadius="@dimen/shot_cardview_corner_radius"
        app:cardElevation="@dimen/shot_cardview_elevation">

        <co.netguru.android.inbbbox.feature.shared.view.RoundedCornersShotImageView
            android:id="@+id/project_shot_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</FrameLayout>