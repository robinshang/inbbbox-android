<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/peek_shot_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/bucket_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/shot_cardview_corner_radius"
        app:cardElevation="@dimen/shot_cardview_elevation">

        <co.netguru.android.inbbbox.feature.shared.view.RoundedCornersShotImageView
            android:id="@+id/rounded_corners_shot_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_parallax_image_view_height"
            android:background="@drawable/shape_rounded_top_corners"
            app:roundedCornersBackgroundColor="@color/primary"
            app:roundingBottomCornersEnabled="false" />
    </android.support.v7.widget.CardView>

    <include layout="@layout/item_shot_info_user_info_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/peek_shot_bottom_height"
        android:background="@drawable/shape_rounded_bottom_corners" />

</LinearLayout>