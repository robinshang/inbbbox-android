<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_header_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_teams_text_marginStart"
        android:layout_marginTop="@dimen/item_teams_text_marginTop"
        android:text="@string/on_teams"
        android:textColor="@color/textColorUserInfo"
        android:textSize="@dimen/item_teams_text_textSize"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_teams_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_teams_recyclerView_height"
        android:layout_marginStart="@dimen/item_teams_recyclerView_marginStart" />
</LinearLayout>