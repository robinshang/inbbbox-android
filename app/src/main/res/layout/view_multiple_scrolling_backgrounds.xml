<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <co.netguru.android.inbbbox.feature.shared.view.ScrollingBackgroundView
            android:id="@+id/scrolling_background_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageDrawable="@drawable/stripe1"
            app:scrollDirection="down"/>

        <co.netguru.android.inbbbox.feature.shared.view.ScrollingBackgroundView
            android:id="@+id/scrolling_background_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageDrawable="@drawable/stripe2"
            app:offset="@integer/scrolling_background_negative_offset"
            app:scrollDirection="up"/>

        <co.netguru.android.inbbbox.feature.shared.view.ScrollingBackgroundView
            android:id="@+id/scrolling_background_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageDrawable="@drawable/stripe3"
            app:offset="@integer/scrolling_background_offset"
            app:scrollDirection="down"/>

        <co.netguru.android.inbbbox.feature.shared.view.ScrollingBackgroundView
            android:id="@+id/scrolling_background_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:imageDrawable="@drawable/stripe4"
            app:scrollDirection="up"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_gradient"
        />
</merge>