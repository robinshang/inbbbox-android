<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/ShotDetailsSectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_avatar_imageView"
        android:layout_width="@dimen/comment_user_avatar_size"
        android:layout_height="@dimen/comment_user_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/details_user_avatar_margin"
        android:src="@drawable/ic_ball"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="@dimen/drawer_header_photo_border"
        app:civ_fill_color="@color/lightGray"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/comment_avatar_imageView"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/comment_author_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/comment_text_textView"
            style="@style/Font14.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment_date_textView"
            style="@style/Font12.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"/>

        <View style="@style/Divider" android:alpha="0.5"/>
    </LinearLayout>

</RelativeLayout>